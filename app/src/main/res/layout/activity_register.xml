<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_back"
    tools:context=".RegisterActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/regtool_id"
        android:theme="@style/customtooltheme">

    </android.support.v7.widget.Toolbar>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/user_id"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext"
            android:drawablePadding="2dp"
            android:drawableLeft="@drawable/ic_action_name"
            android:hint="User name"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:singleLine="true" />
        <EditText
            android:id="@+id/mail_id"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/reg_mail"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:paddingBottom="5dp"
            android:paddingRight="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:singleLine="true" />


            <EditText
                android:id="@+id/pswd_id"
                android:layout_width="270dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_action_lock"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/conpswd_id"
                android:layout_width="270dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_action_lock"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true" />

     <!--   <EditText
            android:id="@+id/et_address"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/edittext"
            android:drawableRight="@drawable/ic_action_location"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:hint="Address"
            android:maxLines="2"
            android:minLines="2"
            android:padding="10dp"
            android:scrollbars="vertical" /> -->

        <Button
            android:id="@+id/regbtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:text="register"
            android:paddingBottom="5dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already Registered ?"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="#FFFFFF"/>
        <TextView
            android:id="@+id/reglogbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/clicklogin"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="italic|bold"
            android:textColor="#000000"/>
       <!-- <Button
            android:id="@+id/reglogbtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:text="Log in"
            android:paddingBottom="5dp"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:textColor="#FFFFFF"/> -->
    </LinearLayout>

</ScrollView>

</LinearLayout>